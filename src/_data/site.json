{
  "name": "Twelvety",
  "description": "API-driven website generation service powered by Eleventy",
  "organization": "Twelvety",
  "url": "https://twelvety.dev",
  "sections": [
    {
      "id": "workspace",
      "title": "Workspace",
      "description": "Create and build your markdown site",
      "icon": "‚ú®",
      "primary": true
    },
    {
      "id": "docs",
      "title": "Documentation",
      "description": "Learn how to use Twelvety",
      "icon": "üìñ"
    },
    {
      "id": "examples",
      "title": "Examples",
      "description": "Sample projects and templates",
      "icon": "üìö"
    },
    {
      "id": "api",
      "title": "API",
      "description": "Programmatic access documentation",
      "icon": "‚öôÔ∏è"
    }
  ],
  "audienceTypes": [
    "developers",
    "designers",
    "managers",
    "students"
  ],
  "evidenceLevels": [
    { "id": "high", "label": "High Quality", "badge": "strong" },
    { "id": "medium", "label": "Medium Quality", "badge": "good" },
    { "id": "low", "label": "Emerging", "badge": "emerging" }
  ],
  "frontmatterSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["title", "category", "layout"],
    "additionalProperties": true,
    "properties": {
      "title": {
        "type": "string",
        "minLength": 1,
        "maxLength": 200,
        "description": "Page title (displayed in navigation and meta tags)"
      },
      "category": {
        "type": "string",
        "enum": ["workspace", "docs", "examples", "api", "about"],
        "description": "Content section (must match a section id or special category)"
      },
      "layout": {
        "type": "string",
        "const": "content.njk",
        "description": "Template layout to use"
      },
      "description": {
        "type": "string",
        "maxLength": 160,
        "description": "Brief summary for SEO and preview (max 160 chars)"
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" },
        "maxItems": 10,
        "uniqueItems": true,
        "description": "Search keywords and topics (lowercase, hyphenated)"
      },
      "audience": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": ["developers", "designers", "managers", "students"]
        },
        "description": "Target audience for this content"
      },
      "dateAdded": {
        "type": "string",
        "format": "date",
        "description": "Creation date (YYYY-MM-DD)"
      },
      "lastReviewed": {
        "type": "string",
        "format": "date",
        "description": "Last review date (YYYY-MM-DD)"
      },
      "reviewDue": {
        "type": "string",
        "format": "date",
        "description": "Next review deadline (YYYY-MM-DD)"
      },
      "status": {
        "type": "string",
        "enum": ["published", "draft", "archived"],
        "default": "published",
        "description": "Content lifecycle state"
      },
      "order": {
        "type": "integer",
        "minimum": 0,
        "description": "Display order within section"
      },
      "parent": {
        "type": "string",
        "description": "Parent page slug for hierarchical content"
      },
      "source": {
        "type": "string",
        "description": "Attribution or source reference"
      },
      "sourceUrl": {
        "type": "string",
        "format": "uri",
        "description": "URL to source material"
      },
      "webglEmbed": {
        "type": "string",
        "format": "uri",
        "description": "URL to WebGL content for embedding"
      },
      "webglHeight": {
        "type": "integer",
        "minimum": 300,
        "maximum": 1200,
        "default": 600,
        "description": "Height of WebGL iframe in pixels"
      }
    }
  }
}
